<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.nativeaudio" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Pocket Sampler</name>
    <description>
        Pocket Sampler Application
    </description>
    <author email="tommynt@outlook.com" href="https://github.com/TommyNT/BAI-App">
        Pawe≈Ç Kalinowski &amp; Duong Nguyen Tuan
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="res/drawable-port-hdpi/screen.png" density="port-hdpi"/>
        <splash src="res/drawable-port-ldpi/screen.png" density="port-ldpi"/>
        <splash src="res/drawable-port-mdpi/screen.png" density="port-mdpi"/>
        <splash src="res/drawable-port-xhdpi/screen.png" density="port-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <plugin name="cordova-plugin-nativeaudio" spec="^3.0.9" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-plugin-media" spec="~3.0.0" />
    <plugin name="cordova-plugin-splashscreen" spec="~3.2.1" />
    <preference name="SplashScreenDelay" value="7000" />
    <preference name="SplashScreen" value="screen" />
    <icon src="res/icon.png" />
    <splash src="res/screen.png" />
</widget>
